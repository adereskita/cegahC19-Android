<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step.StepActivity"
    android:background="#F4F4F4">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:maxHeight="160dp"
        app:cardBackgroundColor="#DBEBFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:outlineSpotShadowColor="#AE434343"
        android:outlineAmbientShadowColor="#A99C9C9C"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="0"
                android:textColor="#1329BC"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_rv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_rv_title" />

            <TextView
                android:id="@+id/tv_rv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="My Step"
                android:textColor="#4870A2"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/LinearHorizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:id="@+id/LinearVertical_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <abak.tr.com.boxedverticalseekbar.BoxedVertical
                android:id="@+id/bar_4"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:backgroundColor="#FFFFFF"
                app:cornerRadius="20dp"
                app:defaultValue="600"
                app:imageEnabled="false"
                app:max="1000"
                app:progressColor="#DBEBFF"
                app:step="5"
                app:textBottomPadding="600"
                app:textColor="#1329BC"
                app:textEnabled="true"
                app:textSize="12sp"
                app:touchDisabled="true" />

            <TextView
                android:id="@+id/tv_day_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:text="Senin"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearVertical_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <abak.tr.com.boxedverticalseekbar.BoxedVertical
                android:id="@+id/bar_3"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                app:backgroundColor="#FFFFFF"
                app:cornerRadius="20dp"
                app:defaultValue="0"
                app:imageEnabled="false"
                app:max="300"
                app:progressColor="#DBEBFF"
                app:step="5"
                app:textBottomPadding="600"
                app:textColor="#1329BC"
                app:textEnabled="true"
                app:textSize="12sp"
                app:touchDisabled="true" />

            <TextView
                android:id="@+id/tv_day_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:text="Selasa"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearVertical_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <abak.tr.com.boxedverticalseekbar.BoxedVertical
                android:id="@+id/bar_2"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                app:backgroundColor="#FFFFFF"
                app:cornerRadius="20dp"
                app:defaultValue="0"
                app:imageEnabled="false"
                app:max="300"
                app:progressColor="#DBEBFF"
                app:step="5"
                app:textBottomPadding="600"
                app:textColor="#1329BC"
                app:textEnabled="true"
                app:textSize="12sp"
                app:touchDisabled="true" />

            <TextView
                android:id="@+id/tv_day_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:text="Rabu"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearVertical_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <abak.tr.com.boxedverticalseekbar.BoxedVertical
                android:id="@+id/bar_1"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:backgroundColor="#FFFFFF"
                app:cornerRadius="20dp"
                app:defaultValue="0"
                app:imageEnabled="false"
                app:max="300"
                app:progressColor="#DBEBFF"
                app:step="5"
                app:textBottomPadding="600"
                app:textColor="#1329BC"
                app:textEnabled="true"
                app:textSize="12sp"
                app:touchDisabled="true" />

            <TextView
                android:id="@+id/tv_day_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:text="Kamis"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>